  @model Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <h2>@Model.ProductName</h2>
    <p>@Model.Price.ToString("c")</p>
     <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductId">Get Details</a>
    <button type="button" class="btn btn-primary" style="background-color: var(--bs-blue);">Get Details</button>

    <hr />
</div>

<div class="col-sm-12 col-md-4 my-2">
<div class="card" style="width: 18rem;">
    <img src="/images/default.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
            <i class="fa-solid fa-arrow-right"></i>
            Go somewhere</a>
      </div>
   </div>
</div>
